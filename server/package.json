{
  "name": "nowmad",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ts-node": "TS_NODE_TRANSPILE_ONLY=true ts-node",
    "prisma:dev": "prisma migrate dev --name init",
    "dev": "yarn prisma:dev && nodemon --watch \"./src/**\" --ext \"ts,json\" --exec \"yarn ts-node ./src/index.ts\"",
    "prisma:build": "export $(grep -v '^#' .env | xargs); export $(grep -v '^#' .env.prod | xargs); prisma migrate deploy",
    "build": "yarn prisma:build && NODE_ENV=production tsc",
    "start": "PORT=8000 nodemon --watch \"./dist/**\" -x 'node ./dist/index.js || touch ./dist/index.js'",
    "service:start": "sudo systemctl start server.service",
    "service:restart": "sudo systemctl restart server.service",
    "service:logs": "sudo journalctl -b -u server.service -f",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@supabase/supabase-js": "^2.1.0",
    "bcrypt": "^5.1.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "glob": "^8.0.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "puppeteer": "^19.2.2",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-recaptcha": "^3.6.6",
    "uuid": "^9.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@swc/core": "^1.3.18",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/glob": "^8.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.11.9",
    "@types/uuid": "^9.0.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "prisma": "^4.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  }
}
