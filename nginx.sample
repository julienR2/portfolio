server {
	server_name  studio.nowmad.io;

	location / {
		proxy_pass http://localhost:3000;
		proxy_set_header Host $host;
		proxy_redirect off;
		proxy_set_header Upgrade $http_upgrade;
		auth_basic "Restricted Content";
		auth_basic_user_file /etc/nginx/.htpasswd;
