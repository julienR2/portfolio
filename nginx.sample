server {
    if ($host = dev.nowmad.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = studio.nowmad.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = supabase.nowmad.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = nowmad.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80 ;
	listen [::]:80 ;
    server_name supabase.nowmad.io studio.nowmad.io dev.nowmad.io nowmad.io;
    return 404; # managed by Certbot
}