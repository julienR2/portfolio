{
  "name": "nowmad",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start:supabase": "cd supabase && npm start",
    "start": "next start",
    "generate:types": "export $(grep -v '^#' .env | xargs) && npx supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" > types/supabase.ts",
    "lint": "next lint",
    "typecheck": "tsc",
    "service:setup": "sudo cp nowmad.service /lib/systemd/system",
    "service:start": "sudo systemctl start nowmad.service",
    "service:stop": "sudo systemctl stop nowmad.service",
    "service:restart": "sudo systemctl restart nowmad.service",
    "service:logs": "sudo journalctl -b -u nowmad.service -f"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@emotion/react": "^11.11.0",
    "@emotion/server": "^11.11.0",
    "@mantine/core": "^6.0.13",
    "@mantine/form": "^6.0.13",
    "@mantine/hooks": "^6.0.13",
    "@mantine/next": "^6.0.13",
    "@mantine/notifications": "^6.0.13",
    "@mantine/spotlight": "^6.0.13",
    "@mantine/tiptap": "^6.0.13",
    "@supabase/auth-helpers-nextjs": "^0.6.1",
    "@supabase/auth-helpers-react": "^0.3.1",
    "@supabase/supabase-js": "^2.22.0",
    "@tabler/icons-react": "^2.21.0",
    "@tiptap/extension-link": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "jsdom": "^22.1.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "next": "13.4.3",
    "next-plausible": "^3.8.0",
    "nodemailer": "^6.9.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "video.js": "^8.3.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.195",
    "@types/mime-types": "^2.1.1",
    "@types/node": "20.2.3",
    "@types/nodemailer": "^6.4.8",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "typescript": "5.0.4"
  }
}
