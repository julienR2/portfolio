{
  "name": "nowmad",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start:supabase": "cd supabase && npm start",
    "start": "next start",
    "generate:types": "export $(grep -v '^#' .env | xargs) && npx supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID_REMOTE\" > types/supabase_remote.ts",
    "lint": "next lint",
    "typecheck": "tsc",
    "service:setup": "sudo cp nowmad.service /lib/systemd/system",
    "service:start": "sudo systemctl start nowmad.service",
    "service:stop": "sudo systemctl stop nowmad.service",
    "service:restart": "sudo systemctl restart nowmad.service",
    "service:logs": "sudo journalctl -b -u nowmad.service -f"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/server": "^11.11.0",
    "@mantine/core": "^6.0.11",
    "@mantine/form": "^6.0.11",
    "@mantine/hooks": "^6.0.11",
    "@mantine/next": "^6.0.11",
    "@mantine/notifications": "^6.0.11",
    "@supabase/auth-helpers-nextjs": "^0.6.1",
    "@supabase/auth-helpers-react": "^0.3.1",
    "@supabase/supabase-js": "^2.22.0",
    "@tabler/icons-react": "^2.20.0",
    "mime-types": "^2.1.35",
    "next": "13.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.1",
    "@types/node": "20.2.3",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "typescript": "5.0.4"
  }
}
