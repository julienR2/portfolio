{
  "name": "nowmad-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm install && cd supabase && npm start && cd .. && cd server && npm install && npm start",
    "service:setup": "sudo cp nowmad.service /lib/systemd/system",
    "service:start": "sudo systemctl start nowmad.service",
    "service:stop": "sudo systemctl stop nowmad.service",
    "service:restart": "sudo systemctl restart nowmad.service",
    "service:logs": "sudo journalctl -b -u nowmad.service -f"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-universe": "^11.2.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.4"
  }
}
